#include <bits/stdc++.h>
using namespace std;

class Solution {
  public:
    int totalCount(int k, vector<int>& arr) {
        // code here
        int count=0;
        for(int i=0;i<arr.size();i++){
            count += (arr[i] + k - 1) / k;
        }
        return count;
    }
};



int main() {

string ts;

getline(cin, ts);

int t stoi(ts); I

while (t--) {

string ks;

getline(cin, ks);

int k = stoi(ks);

vector<int> arr;

string input;

getline(cin, input); stringstream ss(input);

int number;

while (ss >> number) {

arr.push_back(number);

}

Solution obj;

int res = obj.totalCount(k, arr);

cout << res << endl;

}

return 0;

}
